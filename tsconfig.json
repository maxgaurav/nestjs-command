{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "target": "es6",
    "sourceMap": false,
    "allowJs": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "types": [
      "node",
      "jest",
    ]
  },
  "include": [
    "lib/**/*"
  ],
  "exclude": [
    "dist/**/*",
    "node_modules",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
